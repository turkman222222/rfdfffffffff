<Page x:Class="WpfApp2.Pages.Addpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Addpage">

    <Grid Background="#FF8EA542">
        <Button x:Name="btnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="337,281,0,0" VerticalAlignment="Top" Click="btnSave_Click"/>
        <ComboBox x:Name="txtAuthorName"  SelectedIndex="{Binding AuthorID}" HorizontalAlignment="Left" Margin="286,204,0,0" VerticalAlignment="Top" Width="120" />
        <TextBox HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Recipesname}" VerticalAlignment="Top" Width="202" Height="23" Margin="285,39,0,0" TextChanged="TextBox_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="289,18,0,0" TextWrapping="Wrap" Text="Рецепт" VerticalAlignment="Top" RenderTransformOrigin="0.312,-2.876" Width="60" />
        <TextBox x:Name="text03" Text="{Binding Discription}"  HorizontalAlignment="Left" Margin="285,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" Height="31" TextChanged="text03_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="285,73,0,0" TextWrapping="Wrap" Text="Описание" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="286,183,0,0" TextWrapping="Wrap" Text="Имя автора" VerticalAlignment="Top"/>
        <ComboBox x:Name="txtCategoriesName" SelectedIndex="{Binding CategoryID}" HorizontalAlignment="Left" Margin="285,248,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="289,227,0,0" TextWrapping="Wrap" Text="Категория" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCookingTime" Text="{Binding CookingTime}" HorizontalAlignment="Left" Margin="287,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="289,140,0,0" TextWrapping="Wrap" Text="Время в минутах" VerticalAlignment="Top"/>
        <Button Content="Вернуться назад" HorizontalAlignment="Left" Margin="423,281,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Page>
